{{ header }}{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" id="button-save" form="form-setting" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>  
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
  	<div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
	    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-setting" class="form-horizontal">
	    	<div class = 'form-group required'>
    			<label class='col-sm-2 control-label'>{{entry_service_name}}</label>
	        	<div class='col-sm-10'>
	        		<input type='text' id="input-service-start-hour" name='service_name' placeholder="{{entry_service_name}}" value='{{service_name}}' class="form-control">
              {% if error_service_name %}
              <div class="text-danger">{{ error_service_name }}</div>
              {% endif %}
	        	</div>
	        </div>
	        <div class='form-group'>
    			<label class='control-label col-sm-2'>{{entry_service_description}}</label>
	        	<div class='col-sm-10'>
				      <input type='text' id="input-service-description" name='service_description' placeholder="{{entry_service_description}}" value='{{service_description}}' class="form-control">
              {% if error_service_description %}
                <div class="text-danger">{{ error_service_description }}</div>
              {% endif %}
	        	</div>
	    	</div>
        <div class='form-group required'>
          <label class='control-label col-sm-2'>{{entry_service_duration}}</label>
            <div class='col-sm-10'>
              <input type='text' id="input-service-duration" name='service_duration' placeholder="{{entry_service_duration}}" value='{{service_duration}}' class="form-control">
              {% if error_service_duration %}
                <div class="text-danger">{{ error_service_duration }}</div>
              {% endif %}
            </div>
        </div>
	    	<div class='form-group required'>
	    		<label class="control-label col-sm-2" for="input-cancellation-time">{{entry_service_price}}</label>
	    		<div class='col-sm-10'>
	    			<input type='text' id="input-service-price" name="service_price" placeholder="{{entry_service_price}}" value='{{service_price}}' class='form-control'>
            {% if error_service_price %}
              <div class="text-danger">{{ error_service_price }}</div>
              {% endif %}
	    		</div>
	    	</div>

	    </form>
    </div>
  </div>
</div>

{{ footer }}